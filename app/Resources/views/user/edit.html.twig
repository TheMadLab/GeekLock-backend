{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-sm-3">
            <a href="{{ path('user_index') }}" class="btn btn-info">
                <span class="glyphicon glyphicon-chevron-left"></span>
                Back to the list
            </a>
        </div>
        <div class="col-sm-6">
            <h1 class="text-center">User edit</h1>
        </div>
        <div class="col-sm-3">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger pull-right" onclick="return confirm('R u sure?')">
            {{ form_end(delete_form) }}
        </div>
    </div>




    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" class="btn btn-warning pull-right" value="Edit" />
    {{ form_end(edit_form) }}

{% endblock %}
